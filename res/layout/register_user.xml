<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center" >
	<TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/registration_title"
       android:textSize="14sp" 
       android:textColor="@android:color/black"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="20dp">
   </TextView>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal" >
	   <EditText
	       android:id="@+id/first_name"
	       android:layout_width="130dp"
	       android:layout_height="wrap_content"
	       android:textSize="14sp" 
	       android:textColor="@android:color/black"
	       android:paddingTop="10dp"
	       android:ems="10"
	       android:hint="First Name"
	       android:maxLength="10">
	    </EditText>
	  
	    <EditText
	       android:id="@+id/last_name"
	       android:layout_width="130dp"
	       android:layout_height="wrap_content"
	       android:textSize="14sp" 
	       android:textColor="@android:color/black"
	       android:ems="10"
	       android:hint="Last Name"
	       android:maxLength="10"
	       android:paddingTop="10dp">
	    </EditText>
	</LinearLayout>
    <EditText
       android:id="@+id/username"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:textSize="14sp" 
       android:textColor="@android:color/black"
       android:ems="10"
       android:hint="Username (last name)"
       android:maxLength="10"
       android:paddingTop="10dp"
       >
    </EditText>
    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="14sp" 
     	android:textColor="@android:color/black"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
 		android:maxLength="10"
      	android:paddingTop="10dp">
    </EditText>
    <Spinner
        android:id="@+id/security_question_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
         android:textSize="14sp" 
        android:paddingTop="10dp">"
    </Spinner>
    <EditText
        android:id="@+id/answerOne"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="14sp" 
     	android:textColor="@android:color/black"
        android:ems="10"
        android:hint="Security Answer One"
 		android:maxLength="10"
      	android:paddingTop="10dp">
    </EditText>
    <Spinner
        android:id="@+id/security_question_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
         android:textSize="14sp" 
       android:paddingTop="10dp">
    </Spinner>
    <EditText
        android:id="@+id/answerTwo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="14sp" 
     	android:textColor="@android:color/black"
        android:ems="10"
        android:hint="Security Answer Two"
 		android:maxLength="10"
      	android:paddingTop="10dp">
    </EditText>
    <Spinner
        android:id="@+id/security_question_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
         android:textSize="14sp" 
        android:paddingTop="10dp">
    </Spinner>
    <EditText
        android:id="@+id/answerThree"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="14sp" 
     	android:textColor="@android:color/black"
        android:ems="10"
        android:hint="Security Answer Three"
 		android:maxLength="10"
      	android:paddingTop="10dp">
    </EditText>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal" 
        android:paddingTop="20dp">
	    <Button
	        android:id="@+id/registerUserButton"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:text="Submit" />
	     <Button
	        android:id="@+id/resetFieldsButton"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:text="Reset" />
	     </LinearLayout>
</LinearLayout>